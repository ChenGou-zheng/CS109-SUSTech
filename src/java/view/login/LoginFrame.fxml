<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="view.login.LoginController"
      prefWidth="400" prefHeight="300"
      style="-fx-background-color: #f5f5f5;">

    <!-- 标题 -->
    <Label text="Login" layoutX="150" layoutY="30">
        <font>
            <Font name="Arial" size="24"/>
        </font>
    </Label>

    <!-- 用户名标签 -->
    <Label text="Username:" layoutX="50" layoutY="80" />

    <!-- 用户名输入框 -->
    <TextField fx:id="username" layoutX="120" layoutY="75" prefWidth="200" />

    <!-- 密码标签 -->
    <Label text="Password:" layoutX="50" layoutY="130" />

    <!-- 密码输入框 -->
    <PasswordField fx:id="password" layoutX="120" layoutY="125" prefWidth="200" />

    <!-- 确认按钮 -->
    <Button fx:id="submitBtn"
            text="Confirm"
            layoutX="80" layoutY="180"
            prefWidth="100"
            onAction="#handleSubmit"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />

    <!-- 重置按钮 -->
    <Button fx:id="resetBtn"
            text="Reset"
            layoutX="220" layoutY="180"
            prefWidth="100"
            onAction="#handleReset"
            style="-fx-background-color: #f44336; -fx-text-fill: white;" />
</Pane>